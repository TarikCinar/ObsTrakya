<LinearLayout
    android:id="@+id/duyuruGit"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/designMainColor"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/duyuruImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="5dp"
            android:maxWidth="70dp"
            android:layout_margin="10dp"
            android:src="@drawable/duyuru_icon" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/miniTitle"
            android:textSize="14sp"
            style="@style/AppTheme.family"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/icerik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duyuru içeriğini görmek için\ntıklayın."
            android:textColor="@color/miniDescription"
            android:textSize="15sp"
            android:textStyle="bold"
            style="@style/AppTheme.family"
            android:maxLines="3"
            android:layout_marginBottom="10dp"
            android:drawableRight="@drawable/ic_right_icon"/>

    </LinearLayout>

    </LinearLayout>


